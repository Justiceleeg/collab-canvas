rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function - user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // PR #8 - Canvas objects with Strategy 3 locking
    // Security rules allow writes; application logic (transactions) handles lock validation
    match /canvasObjects/{objectId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Allow updates for authenticated users
      // Lock logic is handled in application layer via transactions
      // This allows stale lock takeover (can't check timestamps in security rules)
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Test collection - allow all for connection testing (can be removed in production)
    match /test/{testDoc} {
      allow read, write: if true;
    }
  }
}

